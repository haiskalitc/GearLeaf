        </Grid>
        <Grid Grid.Column="1" Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="20*"></RowDefinition>
                <RowDefinition Height="2*"></RowDefinition>
                <RowDefinition Height="15*"></RowDefinition>
                <RowDefinition Height="2*"></RowDefinition>
            </Grid.RowDefinitions>
            <Grid Grid.Row="0">
                <GroupBox FontSize="15" Header="Description">
                    <Grid>
                        <TextBox TextWrapping="WrapWithOverflow" AcceptsReturn="True"  Grid.Row="1" Name="txtDes"></TextBox>
                    </Grid>
                </GroupBox>
            </Grid>
            <Grid Grid.Row="2">
                <GroupBox FontSize="15" Header="Danh sách ảnh">
                    <ScrollViewer Margin="5">
                        <WrapPanel 
                            ScrollViewer.CanContentScroll="True"
                            ScrollViewer.VerticalScrollBarVisibility="Visible"
                            Name="dsAnh"></WrapPanel>
                    </ScrollViewer>
                </GroupBox>
            </Grid>
            <Grid Grid.Row="3">
                <Button Name="btnExport" Click="btnExport_Click" Content="Export" Width="100" Height="30"></Button>
            </Grid>
            <TextBox Height="25" Text="http://35.199.161.229/uploadcdn/Aquacozys/" Name="txtServer" Grid.Row="1" Margin="10 5 10 5"></TextBox>
        </Grid>
        <Grid Grid.Column="2" Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="8*"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>

            </Grid.RowDefinitions>
            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="7*"></ColumnDefinition>
                    <ColumnDefinition Width="3*"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <TextBox VerticalContentAlignment="Center" FontSize="14" Name="txtPath" Margin=" 5 0 0 0" Height="30"></TextBox>
                <Button Grid.Column="1" Click="Button_Click" Margin="5 0 0 0" Height="30" Content="Folder"></Button>
            </Grid>
            <Grid Grid.Row="1" Margin="4">
                <TreeView 
                    SelectedItemChanged="trvFiles_SelectedItemChanged"
                    Margin="0,0,0,0" Name="trvFiles">
                    <TreeViewItem
                        Name="trvItemFile" 
                        FlowDirection="LeftToRight" 
                        ItemsSource="{Binding Path=SubFolders}">
                        <TreeViewItem.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <Image Source="Images/folder.png" Width="30" Height="30"></Image>
                                    <TextBlock Margin="10 0 0 0" VerticalAlignment="Center" FontSize="13" Text="{Binding Name}"></TextBlock>
                                </StackPanel>
                            </DataTemplate>
                        </TreeViewItem.ItemTemplate>
                    </TreeViewItem>
                </TreeView>

            </Grid>
            <Grid Grid.Row="2">
                <Grid.RowDefinitions>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>

                </Grid.RowDefinitions>
                <Button Grid.Row="0" Click="btnAdd_Click" Name="btnAdd" Content="Thêm" Width="100" Height="35"></Button>
                <Button Grid.Row="1" Click="btnResize_Click" Name="btnResize" Content="Resize" Width="100" Height="35"></Button>
            </Grid>
        </Grid>
    </Grid>
