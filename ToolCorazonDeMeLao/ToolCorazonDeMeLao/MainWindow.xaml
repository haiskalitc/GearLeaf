<Window x:Class="ToolCorazonDeMeLao.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ToolCorazonDeMeLao"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="7*"></ColumnDefinition>
                <ColumnDefinition Width="3*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <TextBox VerticalContentAlignment="Center" FontSize="14" Name="txtPath" Margin=" 5 0 0 0" Height="30"></TextBox>
            <Button Grid.Column="1" Click="Button_Click" Margin="5 0 0 0" Height="30" Content="Folder"></Button>
        </Grid>
        <Button Grid.Row="1" Width="100" Height="30" Content="Lọc"></Button>
    </Grid>
</Window>
